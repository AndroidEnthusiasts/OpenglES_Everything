<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.opensource.opengles">
    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OpenGLES">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".render.ViewActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".camera.CameraActivity"
            android:theme="@style/Theme.Design.NoActionBar"/>
        <activity android:name=".ui_yida.FilterActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity android:name=".yuv.PaintActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity android:name=".model.ModelLoadActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity android:name=".camera.CameraActivity2"/>

        <activity android:name=".skybox.SkyBoxActivity"
            android:theme="@style/Theme.Design.NoActionBar" />

        <activity android:name=".player.MediaPlayerActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
    </application>

</manifest>